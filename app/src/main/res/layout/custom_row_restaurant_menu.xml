<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/marginHeight"
    android:layout_marginBottom="@dimen/marginHeight"
    android:layout_marginStart="@dimen/marginWidth"
    android:layout_marginEnd="@dimen/marginWidth"
    android:background="@color/colorPrimaryDark"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSerialNo"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_weight="1.6"
            android:padding="2dp"
            android:text="@string/_1"
            android:layout_gravity="center"
            android:gravity="center" />


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="10"
            android:padding="6dp">

            <TextView
                android:id="@+id/txtItemName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/item_name"
                android:padding="2dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtItemPrice"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/rs_400"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:padding="2dip" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="3.4"
            android:layout_gravity="center"
            android:layout_margin="21dp"
            app:cardCornerRadius="6dp">

            <Button
                android:id="@+id/btnAddCart"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="@string/add"
                android:textColor="@color/colorPrimary"
                android:background="@color/btnColor1"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.cardview.widget.CardView>